{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"] // 型定義ファイルを指定
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
